<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1>Create Your New Listings Here</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="md-3">
            <label for="title" class="form-label">Title:</label>
            <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
        </div>
       
        <div class="md-3">
            <label for="description" class="form-label">Description :</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>

        </div>
        
        <div class="md-3">
            <label for="image" class="form-label">Image :</label>
            <input name="listing[image.url]" placeholder="Enter image URL/Link" type="text" class="form-control" >
        </div>
        
        <div class="md-3">
            <label for="price" class="form-label">Price :</label>
            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
        </div>
        <div class="row">
        <div class="md-3 col-md-4 ">
            <label for="country" class="form-label">Country :</label>
            <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required>
        </div>
        
        <div class="md-3 col-md-8">
            <label for="location" class="form-label">Location :</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
        </div>
    </div>

        <br>
         <button class="btn btn-dark md-3 add-btn">Add</button>
        <br>
        <br>
    </form>
</body>
</div>
</div>
