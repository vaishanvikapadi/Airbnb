<% layout("/layouts/boilerplate") %>

<body>
  <br>
    
    <h3>All Listings</h3>
    <br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let listing of allListings){%>
        <a href="/listings/<%= listing._id%>" class="listing-links">
    <div class="card col listing-card" style="width: 20rem;">
      <img src="<%= listing.image && listing.image.url ? listing.image.url : listing.image %>" 
      class="card-img-top" alt="listing_image" style="height: 20rem;">
        
        <div class="card-img-overlay">abc</div>
        <div class="card-body">
          <p class="card-text">
           <b> <%= listing.title %> </b><br>
            &#8377; 
            <%= listing.price.toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>/ night  
          </p>
        </div>
      </div>
    </a>
      <%}%>
    </div>
    <form method="GET" action="/listings/new"><button>Create New Listings</button></form>
    <ul>
        <%for(let listing of allListings){%>
            <li><a href="/listings/<%= listing._id %>"><%= listing.title%></a></li>
        <%}%>
    </ul>

</body>
