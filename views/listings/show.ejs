<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details</h3>
</div>
  <div class="card col-6 offset-3 show-card" style="width: 30rem; height: 25rem;" >
    <img 
    src="<%= listing.image.url %>" 
    class="card-img-top" 
    alt="Listing image" />
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b><br />
        <%= listing.description %><br />
        <% if (listing.price != null) { %>
          <%= listing.price.toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
      <% } else { %>
          Price not available
      <% } %> 
      / night  <br>
        <%= listing.location %><br>
        <%= listing.country %>
        <div class="btns">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  add-btn offset-1">Edit</a>
          <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE" >
            <button class="btn btn-dark offset-8">Delete</button>
          </form>
      </div>
      </p>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
