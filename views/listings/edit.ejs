<% layout("/layouts/boilerplate") %>
<body>
    <h2 class="mt-3">Edit Your Listings </h2>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="row mt-3">
            <div class="col-8 offset-2">
        </div>
        <div class="md-3">
            <label for="title" class="form-label">Title:</label>
            <input name="listing[title]" value="<%= listing.title %>" class="form-control" type="text">
        </div>
      
        <br>
        <div class="md-3">
            <label for="description" class="form-label">Description :</label>
            <textarea name="listing[description]" value="<%=listing.description %>" class="form-control"> <%=listing.description%> </textarea>

        </div>
        
        <br>

        <div class="md-3">
            <label for="image" class="form-label">Image :</label>
            <input name="listing[image]" value="<%= listing.image.url %>" type="text" class="form-control">
        </div>
        <div class="md-3">
            <label for="price" class="form-label">Price :</label>
            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control">
        </div>
        <br>

        <div class="row">
            <div class="md-3 col-md-4 ">
                <label for="country" class="form-label">Country :</label>
                <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control">
            </div>
            <br>
            <div class="md-3 col-md-8">
                <label for="location" class="form-label">Location :</label>
                <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control">
            </div>
            </div>
        </div>
         <br>
        <button class="btn btn-dark add-btn mt-3">Edit</button>
        <br>
        <br>
    </form>
</body>
</div>
</div> 
       